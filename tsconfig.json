{
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "typeRoots": ["./node_modules/@types", "./node_modules/@yandex/ymaps3-types", "@intlify/unplugin-vue-i18n/messages"],
    "paths": {
      "~/*": ["src/*"],
      "ymaps3": ["./node_modules/@yandex/ymaps3-types"]
    },
    "skipLibCheck": true
  }
}
